// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["innerdev"]
}

// 견적서 모델
model Quotation {
  id        String   @id @default(cuid())
  version   String   // 버전 번호 (예: 1.0, 1.1, 2.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 회사 정보
  companyName            String
  companyAddress         String
  companyBusinessNumber  String
  companyRepresentative  String
  companyPhone           String

  // 클라이언트 정보
  clientName  String
  clientPhone String

  // 프로젝트 정보
  projectName      String
  projectVersion   String
  projectDate      String
  projectValidityDays Int @default(14)

  // 견적 정보
  discountRate Float
  workPeriod   String
  totalAmount  Float
  vatIncluded  Boolean @default(true)

  // JSON 데이터 저장
  historyData      Json // HistoryItem[]
  milestonesData   Json // MilestoneItem[]
  quotationItems   Json // QuotationItem[]
  gradeInfoData    Json // GradeInfo[]
  milestoneColumnWidths Json? // MilestoneColumnWidths
  rowsPerPage      Int? @default(20)
  roundingUnit     Int? @default(10000) // 절삭 단위 (기본값: 만원)

  // 메모
  notes String?

  @@index([projectName])
  @@index([createdAt])
  @@schema("innerdev")
}

// 피그마 프로젝트 모델
model FigmaProject {
  id            String   @id @default(cuid())
  name          String
  figmaUrl      String
  fileId        String
  pages         Json     // 페이지 목록 (JSON)
  selectedPages Json?    // 선택된 페이지 ID 배열
  convertedPages Json?   // 변환 완료된 페이지 정보 { pageId: { code: string, convertedAt: string, evaluation?: EvaluationResult } }
  status        String   @default("draft") // draft, analyzing, converting, completed
  lastSavedData Json?    // 자동 저장된 작업 데이터
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
  @@index([createdAt])
  @@index([status])
  @@schema("innerdev")
}
